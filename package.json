{
  "name": "qshare",
  "version": "1.0.0",
  "description": "Simple file sharing over local network",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "start": "bun src/index.js",
    "dev": "bun src/index.js",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.qshare.app",
    "productName": "QShare",
    "icon": "src/assets/icon.png",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "files": [
      "src/**/*",
      "electron.js",
      "preload.js",
      "package.json"
    ]
  }
}
